{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "布丁扩展",
    "description": "提升某些网站的Safari体验，包括去掉强制跳转app、暗黑模式等。偶尔也为部分网站添加定制的增强功能。",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "content_scripts": [{
        "css" : ["163.css"],
        "matches" : ["*://3g.163.com/*",
                    "*://m.home.163.com/*"]
    },{
        "css" : ["baidu.css"],
        "matches" : [
            "*://www.baidu.com/*",
            "*://m.baidu.com/*",
            "*://baike.baidu.com/item/*",
            "*://zhidao.baidu.com/question/*",
            "*://baijiahao.baidu.com/s*"
        ]
    },{
        "css" : ["xiaohongshu.css"],
        "matches" : ["*://*.xiaohongshu.com/*"]
    },{
        "css" : ["zhihu.css"],
        "matches" : ["*://*.zhihu.com/*"]
    },{
        "css" : ["36kr.css"],
        "matches" : ["*://m.36kr.com/",
                    "*://m.36kr.com/p/*"]
    },{
        "css" : ["sina.css"],
        "matches" : ["*://*.sina.cn/*"]
    },{
        "js" : ["163.js"],
        "matches" : ["*://3g.163.com/*"]
    },{
        "css" : ["jianshu.css"],
        "matches" : ["*://*.jianshu.com/*"]
    },{
        "css" : ["bilibili.css"],
        "matches" : ["*://*.bilibili.com/*"]
    },{
        "js" : ["bilibili.js"],
        "matches" : ["*://*.bilibili.com/*"]
    },{
        "css" : ["ifanr.css"],
        "matches" : ["*://*.ifanr.com/*"]
    },{
        "js" : ["smzdm.js"],
        "matches" : ["*://*.smzdm.com/*"]
    },{
        "css" : ["smzdm.css"],
        "matches" : ["*://*.smzdm.com/*"]
    },{
        "css" : ["v2ex.css"],
        "matches" : ["*://*.v2ex.com/*"]
    }],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/toolbar-icon-16.png",
            "19": "images/toolbar-icon-19.png",
            "32": "images/toolbar-icon-32.png",
            "38": "images/toolbar-icon-38.png"
        }
    },
    "permissions": [ "tabs","storage"]
}
